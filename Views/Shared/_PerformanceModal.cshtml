@* Views/Shared/_PerformanceModal.cshtml *@
<div class="modal fade" id="performanceModal" tabindex="-1" aria-labelledby="performanceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="performanceModalLabel">عملکرد ماهانه</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">نام و نام خانوادگی: <strong><span id="fullNameDisplay"></span></strong></p>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>ماه گزارش</th>
                                <th>کارکرد (روز)</th>
                                <th>مرخصی استحقاقی</th>
                                <th>مرخصی استعلاجی</th>
                                <th>تعداد روز ماموریت</th>
                                <th>ساعت اضافه کار(سیستمی)</th>
                                <th>ساعت اضافه کار(نهائی)</th>
                                <th>کارکرد روز (از زمان شروع قرارداد)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tbody id="performanceTableBody">
                                <!-- ردیف‌ها به‌صورت پویا اضافه می‌شوند -->
                            </tbody>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                <button type="button" class="btn btn-primary">ذخیره اطلاعات</button>
            </div>
        </div>
    </div>
</div>
